{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "../out-tsc/spec",
    "target": "es5",
    "module": "es2015",
    "types": [
      "jasmine",
      "node"
    ],
    "baseUrl": ".",
    "rootDir": "../",
    "paths": {
      "@branding/rootstate": [
        "../lib/rootstate/src"
      ],
      "@wonderful/project-management": [
        "../lib/product-management/src"
      ]
    }
  },
  "files": [
    "test.ts",
    "main.ts",
    "polyfills.ts"
  ],
  "exclude": [
    "../node_modules",
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}